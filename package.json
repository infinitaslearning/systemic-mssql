{
  "name": "@infinitas/systemic-mssql",
  "version": "1.0.0",
  "description": "Systemic component to connect to Mssql",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint --max-warnings=0 src",
    "test:integration": "ts-mocha ./test/integration/*.ts",
    "test:unit": "ts-mocha ./test/unit/*.ts",
    "test": "npm run test:unit && npm run test:integration",
    "prepare": "husky install",
    "docker": "docker run --name mssql-test-env -e \"ACCEPT_EULA=Y\" -e \"SA_PASSWORD=$KCM_qJ2eWCYcho4.nV-V@_D\" -p 1433:1433 -d mcr.microsoft.com/mssql/server:2019-latest",
    "test:ci": "npm run docker && docker exec mssql-test-env /bin/sh -c \"while [ 1 ]; do /opt/mssql-tools/bin/sqlcmd -S localhost -U sa -P '$KCM_qJ2eWCYcho4.nV-V@_D' -Q 'select 1 from sys.databases where 1 > 2' && break ; sleep 5; done\" && npm t"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/infinitaslearning/systemic-mssql.git"
  },
  "keywords": [
    "systemic",
    "mssql"
  ],
  "author": "Infinitaslearning",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/infinitaslearning/systemic-mssql/issues"
  },
  "homepage": "https://github.com/infinitaslearning/systemic-mssql#readme",
  "dependencies": {
    "mssql": "^7.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.4",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^9.0.0",
    "@types/mssql": "^7.1.4",
    "@types/sinon": "^10.0.6",
    "@types/sinon-chai": "^3.2.6",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.4.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "mocha": "^8.4.0",
    "prettier": "^2.5.1",
    "sinon": "^12.0.1",
    "sinon-chai": "^3.7.0",
    "systemic": "^3.3.10",
    "ts-mocha": "^8.0.0",
    "typescript": "^4.5.2"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,md}": "prettier --write"
  }
}
